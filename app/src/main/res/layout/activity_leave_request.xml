<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- res/layout/activity_leave_request.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/leave_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Leave Request"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/leave_type_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of Leave (e.g., Sick, Vacation)" />

        <EditText
            android:id="@+id/start_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Date (YYYY-MM-DD)" />

        <EditText
            android:id="@+id/end_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date (YYYY-MM-DD)" />

        <EditText
            android:id="@+id/notes_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Notes (Optional)" />

        <Button
            android:id="@+id/submit_leave_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Leave Request" />

    </LinearLayout>


</LinearLayout>