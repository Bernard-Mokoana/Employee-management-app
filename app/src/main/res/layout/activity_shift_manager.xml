<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/shift_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shift Name" />

    <EditText
        android:id="@+id/start_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time" />

    <EditText
        android:id="@+id/end_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time" />

    <Button
        android:id="@+id/add_shift_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Shift" />

    <Button
        android:id="@+id/delete_shift_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Shift"
        android:layout_marginTop="8dp" />

    <ListView
        android:id="@+id/shifts_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

</LinearLayout>