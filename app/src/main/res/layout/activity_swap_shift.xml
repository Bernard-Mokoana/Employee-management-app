<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title for the activity -->
    <TextView
        android:id="@+id/swap_shift_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request a Shift Swap"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- EditText for the reason for shift swap -->
    <EditText
        android:id="@+id/reason_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your reason for shift swap"
        android:inputType="textMultiLine"
        android:lines="4"
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Label for the shift selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Desired Shift"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Spinner to select the desired shift -->
    <Spinner
        android:id="@+id/desired_shift_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="16dp" />

    <!-- Submit button for the shift swap request -->
    <Button
        android:id="@+id/submit_swap_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Shift Swap Request"
        android:textColor="#FFFFFF"
        android:background="#FF000000"
        android:layout_marginTop="16dp" />

</LinearLayout>
